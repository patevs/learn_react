{
  "name": "learn_react",
  "version": "0.12.2",
  "description": "Links, resources, and code related to my learning of the React frontend JavaScript framework",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/learn_react.git"
  },
  "scripts": {
    "start": "cd react-router && react-scripts start",
    "build": "cd react-router && react-scripts build",
    "test": "cd react-router && cross-env CI=true react-scripts test --all",
    "eject": "cd react-router && react-scripts eject",
    "updates": "npx ncu",
    "release": "np"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-bootstrap": "^1.6.3",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "commitlint-config-gitmoji": "^2.2.5",
    "cross-env": "^7.0.3",
    "husky": "^4.3.8",
    "np": "^7.5.0",
    "typescript": "^4.4.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "subject-empty": [
        0,
        "never"
      ],
      "type-empty": [
        0,
        "never"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
