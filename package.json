{
  "name": "learn_react",
  "version": "0.3.0",
  "description": "Links, resources, and code related to my learning of the React frontend JavaScript framework",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/learn_react.git"
  },
  "scripts": {
    "start": "cd react-router && react-scripts start",
    "build": "cd react-router && react-scripts build",
    "test": "cd react-router && react-scripts test --all --ci",
    "eject": "cd react-router && react-scripts eject",
    "commit": "git-cz",
    "release": "np"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-bootstrap": "^1.2.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/core": "^9.0.1",
    "commitizen": "4.1.2",
    "commitlint-config-gitmoji": "^1.0.1",
    "cz-emoji": "^1.2.1",
    "husky": "^4.2.5",
    "np": "^6.3.2",
    "typescript": "^3.9.6"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "./node_modules/commitlint-config-gitmoji"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "body",
        "issues"
      ]
    }
  }
}
